<?define version='0.0.142'?>
<?define UpgradeCode = "862E6090-F6B6-11DD-87AF-0800200C9A66" ?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product
		Name="SqueezePanel 7.4 $(var.version)"
		Id="*"
		UpgradeCode="$(var.UpgradeCode)"
		Manufacturer="Logitech SA"
		Version="$(var.version)"
		Language="1033">

		<Package
			Manufacturer="Logitech"
			InstallerVersion="200"
			Compressed="yes" />

		<Condition Message="Another version of SqueezePanel is already installed. Please uninstall before updating.">NOT OTHERVERSIONDETECTED</Condition>
 
		<Media Id="1" Cabinet="SqueezePanel.cab" EmbedCab="yes" />
		
		<Property Id="WHSLogo">1</Property>

		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="ProgramFilesFolder" Name="PFiles">
				<Directory Id="WHS" Name="Windows Home Server">

					<Component
						Id="HomeServerConsoleTab.SqueezePanel"
						Guid="7f25fe10-f77a-11dd-87af-0800200c9a66">

						<File
							Id="HomeServerConsoleTab.SqueezeCenter.dll"
							Name="HomeServerConsoleTab.SqueezeCenter.dll"
							Source="bin\Release\HomeServerConsoleTab.SqueezeCenter.dll"
							Vital="yes"
							KeyPath="yes"
							DiskId="1"/>

						<RemoveRegistryKey Action="removeOnUninstall"
							Root='HKLM'
							Key="SOFTWARE\Microsoft\Windows Home Server\RegisteredAdditions\[ProductCode]" />
					</Component>

				</Directory>
			</Directory>
		</Directory>

		<Feature Id="ProductFeature" Title="SqueezePanel" Level="1">
			<ComponentRef Id="HomeServerConsoleTab.SqueezePanel" />
		</Feature>

		<Upgrade Id="$(var.UpgradeCode)">
			<UpgradeVersion Minimum="0.0.0" IncludeMinimum="yes"
							OnlyDetect="yes"
							Property="OTHERVERSIONDETECTED" />
		</Upgrade>

		<InstallExecuteSequence>
			<FindRelatedProducts Before="LaunchConditions" />
			<RemoveExistingProducts After="InstallValidate" />
		</InstallExecuteSequence>

		<InstallUISequence>
			<FindRelatedProducts Before="LaunchConditions" />
		</InstallUISequence>
	</Product>

</Wix>