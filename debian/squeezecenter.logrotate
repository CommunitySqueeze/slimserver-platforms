/var/log/squeezecenter/server.log {
  weekly
  rotate 5
  size 200k
  compress
  missingok

  postrotate
    # send USR1 to squeezecenter PID to reset logging
    /bin/kill -USR1 `pgrep squeezecenter-s 2>/dev/null` 2>/dev/null || :
  endscript
}

/var/log/squeezecenter/scanner.log {
  weekly
  rotate 5
  size 200k
  compress
  missingok
}
