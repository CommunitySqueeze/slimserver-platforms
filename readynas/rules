#!/usr/bin/make -f

# $Id$

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

package=squeezecenter-readynas
base=$(CURDIR)/readynas/$(package)
share=usr/share/squeezecenter/
source=$(CURDIR)/../server

clean:
	dh_testdir
	dh_testroot
	rm -rf ${base}

install:
	dh_testdir
	dh_testroot
	dh_installdirs

	# Create directories needed.
	install -d -m0755 ${base}/etc/default/
	install -d -m0755 ${base}/etc/squeezecenter/
	install -d -m0755 ${base}/usr/share/perl5/
	install -d -m0755 ${base}/${share}
	install -d -m0755 ${base}/usr/share/doc/squeezecenter/

	# We need to disable the changeEffectiveUserAndGroup call to run on the readynas
	cp -r $(CURDIR)/readynas/MySQLHelper.pm ${source}/Slim/Utils

	# We also add in some sparc-specific modules
	cp -r $(CURDIR)/readynas/CPAN ${source}/

	# Finally, we disable a specific call to the changeEffectiveUserAndGroup in the startup script
	cat ${source}/slimserver.pl | sed -e 's/changeEffectiveUserAndGroup();/#changeEffectiveUserAndGroup();/g' > ${source}/slimserver.pl

	# Copy our server files to the appropriate Debian locations.
	install -m0755 ${source}/slimserver.pl ${base}/${share}/slimserver.pl
	install -m0755 ${source}/scanner.pl ${base}/${share}/squeezecenter-scanner

	# We need to copy the Slim directory over...
	cp -r ${source}/Slim ${base}/${share}

	# Copy our CPAN directory and locally modified perl modules
	cp -r ${source}/CPAN ${base}/${share}
	cp -r ${source}/lib ${base}/${share}
	
	# Remove non-Linux binary modules
	rm -rf ${base}/${share}/CPAN/arch/5.8/darwin-thread-multi-2level
	rm -rf ${base}/${share}/CPAN/arch/5.8/MSWin32-x86-multi-thread

	# And aux files needed to run SqueezeCenter
	cp -r ${source}/Firmware ${base}/${share}
	cp -r ${source}/Graphics ${base}/${share}
	cp -r ${source}/HTML ${base}/${share}
	cp -r ${source}/IR ${base}/${share}
	cp -r ${source}/MySQL ${base}/${share}
	cp -r ${source}/Plugins ${base}/${share}
	cp -r ${source}/SQL ${base}/${share}
	cp -r ${source}/strings.txt ${base}/${share}

	# Remove errmsg.sys files from the MySQL dir, since they may not match
	# up with the installed version's
	rm ${base}/${share}/MySQL/errmsg.*

	cp -r ${source}/*.conf ${base}/etc/squeezecenter/
	cp -r $(CURDIR)/readynas/squeezecenter.default ${base}/etc/default/squeezecenter

	# Wrapper to keep SqueezeCenter alive.
	cp -r $(CURDIR)/readynas/squeezecenter_safe ${base}/${share}

	# Documentation
	cp ${source}/Change* ${base}/usr/share/doc/squeezecenter/
	cp ${source}/Installation.txt ${base}/usr/share/doc/squeezecenter/
	cp ${source}/License.txt $(CURDIR)/readynas/copyright

	# Copy the revision file
	cp ${source}/revision.txt ${base}/${share}


binary-indep: install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_install
	dh_installlogrotate
	dh_installinit
	dh_installman
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep
.PHONY: build clean binary-indep binary install configure
